# Celsius to Fahrenheit conversion
# @param celsius Numeric vector of temperatures in Celsius
# @return Numeric vector of temperatures in Fahrenheit

celsius_to_fahrenheit <- function(celsius) {
  (celsius * 9/5) + 32
}

# Fahrenheit to Celsius conversion
# @param fahrenheit Numeric vector of temperatures in Fahrenheit
# @return Numeric vector of temperatures in Celsius

fahrenheit_to_celsius <- function(fahrenheit) {
  (fahrenheit - 32) * 5/9
}

# Convert kilometers to miles
#
# @param kilometers Numeric vector of distances in kilometers.
# @return Numeric vector of distances in miles.

km_to_miles <- function(kilometers) {
  miles <- kilometers * 0.621371
  return(miles)
}

# Convert miles to kilometers
#
# @param miles Numeric vector of distances in miles.
# @return Numeric vector of distances in kilometers.

miles_to_km <- function(miles) {
  kilometers <- miles / 0.621371
  return(kilometers)
}
